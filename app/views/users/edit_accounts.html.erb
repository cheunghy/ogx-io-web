<% content_for :title do %>
    <%= t('users.update_user') %>
<% end %>

<div class="update-user-form">
  <h3 class="title"><%= t('users.update_user') %></h3>
  <%= render partial: 'update_nav', locals: {index: 3} %>
  <div class="bind-accounts-container">
    <div class="title">GitHub</div>
    <div class="content">
      <% unless @user.github_access_token.empty?  %>
          <p>
            <%= t('users.binded_account') %>: <%= current_user.github_id %>
          </p>
      <% else %>
          <%= link_to t('users.bind_github'), user_omniauth_authorize_path(:github) %>
      <% end %>
    </div>
  </div>
</div>
